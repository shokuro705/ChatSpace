.chat
  .chat-header
    .chat-header__left
      %h2.group
        group.name
      %ul.group__menber
        Member :
        %li masa
    .chat-header__right
      = link_to edit_group_path(@group) do
        Edit

.messages
  = render @messages

.chat-footer
  = form_for [@group, @message] do |f|
    .chat-footer__form
      = f.text_field :content, class: 'form-box__input', placeholder: 'type a message'
      = f.label :image, class: 'orm-box__picture' do
        = icon('far', 'far fa-image')
        = f.file_field :image, class: 'form-box__stock'
      = f.submit 'Send', class: 'submit-btn'