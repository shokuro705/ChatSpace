.chat-main
  .chat-main__message
    .chat-main__message__heads
      .chat-main__message__head__group
        = message.user.name
      .chat-main__message__head__dat
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main__text
    - if message.content.present?
      %p.chat-main__message__text
      = message.content
    = image_tag message.image.url, class: 'img' if message.image.present?
 